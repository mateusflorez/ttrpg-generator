            temp1 = minMaxRandomizer(1, 100);
            if (temp1 < 51) {
            temp2 += " Efeito fávorável. (Efeito de um descanso longo, ou outra coisa.)";
            }
        }
        oasis = "Oásis com piscina, mas a água não é muito boa. Testes de Perguntas/Respostas outeste de Natureza para discernir mais."+temp2;
    }  else if (rand > 58 && rand < 65) {
        temp1 = minMaxRandomizer(1, 100);
        var temp2 = "";
        if (temp1 < 91) {
            temp2 += " Amigável.";
        }
        oasis = "Oasis contém uma caravana itinerante de mercadores do deserto. Você é capaz de se aproximar furtivamente para que eles não percebam você?"+temp2;
    }  else if (rand > 64 && rand < 71) {
        temp1 = minMaxRandomizer(1, 100);
        var temp2 = "";
        if (temp1 < 51) {
            temp2 += " Amigável.";
        }
        oasis = "Oasis contém um grande acampamento de nômades do deserto. Você é capaz de se aproximar furtivamente para que eles não percebam você?"+temp2;
