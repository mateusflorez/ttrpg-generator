    if (rand < 47) {
        oasis = "Oásis com piscina de água refrescante no centro. Acampamento ideal. Bom lugar para um longo descanso, especialmente em um deserto.";
    } else if (rand > 46 && rand < 53) {
        oasis = "Ao alcançá-lo, você descobre que é uma miragem. Apenas desertos.";
    }  else if (rand > 52 && rand < 59) {
        temp1 = minMaxRandomizer(1, 100);
        var temp2 = "";
        if (temp1 < 31) {
            temp2 += " Água envenenada, ou outra coisa.";
