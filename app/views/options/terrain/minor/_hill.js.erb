function hillRandomizer() {
    rand = minMaxRandomizer(1, 100);
    var hill = "";
    if (rand < 51) {
        hill = "Colinas baixas e ondulantes.";
    } else if (rand > 50 && rand < 58) {
        temp1 = minMaxRandomizer(1, 100);
        var temp2 = "";
        if (temp1 < 26) {
            temp2 += " Pista!";
        }
        hill = "Colinas rochosas abundantes em cavernas, também podem possuir uma rede de túneis naturais. Testes de Perguntas/Respostas para ver se os túneis estão presentes e se estão habitados."+temp2;
    }  else if (rand > 57 && rand < 65) {
        temp1 = minMaxRandomizer(1, 100);
        var temp2 = "";
        if (temp1 < 11) {
            temp2 += " NPC!";
        }
        hill = "Colinas ligeiramente mais altas, dando uma boa visão da área circundante. Teste de Perguntas/Respostas para ver se você consegue ver algo de interesse."+temp2;
    }  else if (rand > 64 && rand < 72) {
        hill = "Colinas rochosas e salientes, praticamente inescaláveis. Teste de Atletismo em escalada, CD 16. Dano de queda se falhar?";
    }  else if (rand > 71 && rand < 79) {
        temp1 = minMaxRandomizer(1, 100);
        var temp2 = "";
        if (temp1 < 26) {
            temp2 += " Monumento!";
        }
        hill = "Seco, planalto baixo."+temp2;
    }  else if (rand > 78 && rand < 86) {
        temp1 = minMaxRandomizer(1, 100);
        var temp2 = "";
        if (temp1 < 26) {
            temp2 += " Encontro fácil de nível apropriado!";
        }
        hill = "Colinas pouco arborizadas, pequenas manchas de floresta. Mesa de bosque."+temp2;
    }  else if (rand > 85 && rand < 93) {
        hill = "Não colinas, mas sim montes de terra de algum tipo, possivelmente túmulos! Testes de Perguntas/Respostas para determinar a natureza desses montes. Pode levar a túneis.";
    }  else {
        temp1 = minMaxRandomizer(1, 100);
        var temp2 = "";
        if (temp1 < 51) {
            temp2 += "humanos.";
        } else {
            temp2 += "bestas escavadoras.";
        }
        hill = "As colinas são o lar de algum tipo de colônia de "+temp2+" Testes de Perguntas/Respostas para determinar o que se esconde aqui.";
    }
    return hill;
}
