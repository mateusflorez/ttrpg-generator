$(function(){

    //Set dice
    const dices = [20, 10, 100, 100];

    //Randomize
    <%= render :partial => 'options/shared/randomizer' %>

    //Option selector
    var res;
    switch (<%= @resp %>) {
        //Climate
        case 1:
            <%= render :partial => 'options/travel/climate' %>
            break;
        //Encounters
        case 2:
            <%= render :partial => 'options/travel/encounters' %>
            break;
        //Settlement
        case 3:
            <%= render :partial => 'options/travel/settlement' %>
            break;
        //Disturbance
        case 4:
            <%= render :partial => 'options/travel/disturbance' %>
            break;
    }

    //Set history
    <%= render :partial => 'options/shared/set_history' %>

    //Save
    <%= render :partial => 'options/shared/save' %>

    //Print
    <%= render :partial => 'options/shared/print' %>

});
